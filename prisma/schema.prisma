// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

// Example model with vector embeddings
model Document {
  id        String                      @id @default(cuid())
  content   String
  metadata  Json?
  embedding Unsupported("vector(384)")?
  createdAt DateTime                    @default(now())
  updatedAt DateTime                    @updatedAt

  @@map("documents")
}

// Example model for vector store metadata
model VectorStore {
  id        String                     @id @default(cuid())
  namespace String
  content   String
  metadata  Json?
  embedding Unsupported("vector(384)")
  createdAt DateTime                   @default(now())

  @@index([namespace])
}

model Chunk {
  id                      Int                        @id @unique @default(autoincrement())
  file                    FileData                       @relation(fields: [fileId], references: [id])
  text                    String @db.VarChar(2560)
  hash                    String @db.VarChar(64)
  selection               Int?
  model                   Model                      @relation(fields: [modelId], references: [id])
  version                 Int
  xenova_all_minilm_l6_v2 Unsupported("vector(384)")
  fileId                  Int
  modelId                 Int
  createdAt               DateTime                   @default(now())
  updatedAt               DateTime                   @updatedAt

  @@index([hash, version, modelId, fileId])
}

model FileData {
  id        Int      @id @unique @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  name      String   @db.VarChar(2560)
  mimeType  String   @db.VarChar(64)
  type      FileDataType @default(TEXT)
  source    String?  @db.VarChar(2560)
  hash      String   @db.VarChar(64)
  version   Int
  size      Int
  content   Bytes?
  Chunk     Chunk[]
  projectId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, projectId])
  @@index([name, projectId])
}

model Project {
  id        Int      @id @unique @default(autoincrement())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  name      String   @db.VarChar(100)  @unique
  files     FileData[]
  tenantId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
}

model Tenant {
  id        Int        @id @unique @default(autoincrement())
  name      String     @db.VarChar(100) @unique
  projects  Project[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Model {
  id         Int      @id @unique @default(autoincrement())
  name       String   @db.VarChar(128) @unique
  columnName String   @db.VarChar(64)
  chunks     Chunk[]
}

enum FileDataType {
  TEXT
  BINARY
}

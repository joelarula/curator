// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

// Example model with vector embeddings
model Document {
  id        String   @id @default(cuid())
  content   String
  metadata  Json?
  embedding Unsupported("vector(384)")?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("documents")
}

// Example model for chat history
model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // 'user' | 'assistant' | 'system'
  content   String
  createdAt DateTime @default(now())

  @@index([sessionId])
  @@map("chat_messages")
}

// Example model for vector store metadata
model VectorStore {
  id          String   @id @default(cuid())
  namespace   String
  content     String
  metadata    Json?
  embedding   Unsupported("vector(384)")
  createdAt   DateTime @default(now())

  @@index([namespace])
}





model Chunk {
  id                      Int     @id @unique @default(autoincrement())
  file                    File    @relation(fields: [fileId], references: [id])
  text                    String
  hash                    String?
  selection               Int?
  model                   Model   @relation(fields: [modelName], references: [name])
  version                 Int
  xenova_all_minilm_l6_v2 String?
  fileId                  Int
  modelName               String
}

model File {
  id        Int      @id @unique @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  name      String
  type      FileType @default(TEXT)
  source    String?
  version   Int
  size      Int
  content   Bytes?
  Chunk     Chunk[]
  projectId Int
}

model Project {
  id       Int    @id @unique @default(autoincrement())
  tenant   Tenant @relation(fields: [tenantId], references: [id])
  name     String @unique
  File     File[]
  tenantId Int
}

model Tenant {
  id      Int       @id @unique @default(autoincrement())
  name    String    @unique
  Project Project[]
}

model Model {
  name   String  @id @unique
  column String
  Chunk  Chunk[]
}

enum FileType {
  TEXT
  BINARY
}